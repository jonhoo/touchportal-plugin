{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "WebFetch(domain:developers.google.com)",
      "WebFetch(domain:doc.rust-lang.org)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:www.touch-portal.com)",
      "Bash(RUST_BACKTRACE=1 cargo check)",
      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo metadata:*)",
      "Bash(timeout 15s cargo run --release)",
      "Bash(timeout 10s cargo run --release)",
      "Bash(python3 ../../scripts/package.py:*)",
      "Bash(python3 ../../scripts/install.py:*)",
      "Bash(python3 ./test_runtime_behaviours.py:*)",
      "Bash(python3 ./test_validation_failures.py:*)",
      "Bash(cat:*)",
      "Bash(git mv:*)",
      "Bash(grep:*)",
      "Bash(lcov:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(shellcheck:*)",
      "Bash(touch:*)",
      "Bash(zipinfo:*)"
    ],
    "deny": []
  }
}
